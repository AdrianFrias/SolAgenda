@if (Model != null && Model.Any())
{
    <h3>Lista de Medios de Contacto</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Medio de Contacto</th>
                <th>Información</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Intermedio dato in Model)
            {
                <tr>
                    <td>@dato.MediosDeContacto</td>
                    <td>@dato.informacion</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay medios de contacto registrados.</p>
}