@using DataAgenda.Modelo

@model List<Intermedio>

@{
    ViewBag.Title = "MediosContacto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MediosContacto</h2>

<form action="/Contacto/AgregarMediodeContacto" method="post">

    <input type="hidden" name="contactoId" value="@ViewBag.contactoId" />

    <label>Tipo de contacto</label>
    @Html.DropDownList("MediosDeContactoId", new SelectList(ViewBag.catalogoMediosContacto, "Id", "Nombre"), "Seleccione una opción", new { @class = "form-control" })

    <label>Info de Contacto</label>
    <input type="text" name="Informacion" />

    <input type="submit" value="Registrar" />

</form>

